                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torque:- 230nm"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toRightOf="@id/bmw"
