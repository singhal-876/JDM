                android:textSize="17dp"
                android:layout_toRightOf="@id/honda"/>

            <TextView
                android:id="@+id/h_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horsepower:- 270hp"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toRightOf="@id/honda"
                android:layout_below="@id/Company_H"/>

            <TextView
                android:id="@+id/h_tq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torque:- 284nm"
                android:layout_margin="4dp"
                android:textStyle="bold"
