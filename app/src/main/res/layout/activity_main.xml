                android:layout_height="wrap_content"
                android:src="@drawable/mazda"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Company_M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company:- Mazda"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toRightOf="@id/mazda"/>

            <TextView
                android:id="@+id/m_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horsepower:- 236hp"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toRightOf="@id/mazda"
                android:layout_below="@id/Company_M"/>

            <TextView
                android:id="@+id/m_tq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torque:- 294nm"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toRightOf="@id/mazda"
                android:layout_below="@id/m_hp"/>

            <TextView
                android:id="@+id/m_ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
